{
    "manifest_version": 3,
    "name": "Fast Registry Scout",
    "version": "1.0",
    "description": "Navigate dependency registry catalogues, fast.",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Fast Registry Scout"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "sidePanel"
    ]
}
